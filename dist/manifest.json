{
    "manifest_version": 3,
    "name": "Pixel Perfect Design Helper",
    "description": "Pixel Perfect Design Helper: Chrome extension overlays UI image on web page for precise design alignment.",
    "version": "1.0",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16":"icons/icon16.png",
            "48":"icons/icon48.png",
            "128":"icons/icon128.png"
        }
    },
    "permissions": ["scripting", "activeTab"],
    "icons": {
        "16":"icons/icon16.png",
        "48":"icons/icon48.png",
        "128":"icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "js": ["content-script.js"]
    }]
}